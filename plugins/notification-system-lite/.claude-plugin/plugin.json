{
  "name": "notification-system-lite",
  "version": "1.0.2",
  "description": "Lightweight idle notification system for Claude Code based on built-in idle_prompt events",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/task-start.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/send-notification.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
